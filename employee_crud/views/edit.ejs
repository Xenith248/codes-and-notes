<!DOCTYPE html>
<html lang="en">
<head>
    <title>Edit Employee</title>
</head>
<body>
    <h1>Edit Employee</h1>
    <form action="/employees/<%= employee._id %>?_method=PUT" method="POST">
        <label>Name:</label>
        <input type="text" name="name" value="<%= employee.name %>" required><br>

        <label>Email:</label>
        <input type="email" name="email" value="<%= employee.email %>" required><br>

        <label>Gender:</label>
        <input type="radio" name="gender" value="Male" <%= employee.gender === 'Male' ? 'checked' : '' %>> Male
        <input type="radio" name="gender" value="Female" <%= employee.gender === 'Female' ? 'checked' : '' %>> Female
        <input type="radio" name="gender" value="Other" <%= employee.gender === 'Other' ? 'checked' : '' %>> Other <br>

        <label>Department:</label>
        <select name="department">
            <option value="HR" <%= employee.department === 'HR' ? 'selected' : '' %>>HR</option>
            <option value="IT" <%= employee.department === 'IT' ? 'selected' : '' %>>IT</option>
            <option value="Finance" <%= employee.department === 'Finance' ? 'selected' : '' %>>Finance</option>
            <option value="Marketing" <%= employee.department === 'Marketing' ? 'selected' : '' %>>Marketing</option>
        </select><br>

        <label>Skills:</label>
        <input type="checkbox" name="skills" value="JavaScript" <%= employee.skills.includes('JavaScript') ? 'checked' : '' %>> JavaScript
        <input type="checkbox" name="skills" value="Python" <%= employee.skills.includes('Python') ? 'checked' : '' %>> Python
        <input type="checkbox" name="skills" value="SQL" <%= employee.skills.includes('SQL') ? 'checked' : '' %>> SQL
        <input type="checkbox" name="skills" value="Excel" <%= employee.skills.includes('Excel') ? 'checked' : '' %>> Excel <br>

        <label>Address:</label>
        <textarea name="address" rows="3"><%= employee.address %></textarea><br>

        <button type="submit">Update Employee</button>
    </form>
</body>
</html>
